@model UserViewModel
@{
    ViewData["Title"] = "User Details";
}

<h1 class="alert alert-warning">@Model.DisplayName Details</h1>

<div class="form-group">
    <label asp-for="Id" class="col-form-label"></label>
    <input asp-for="Id" class="form-control" readonly />
</div>
<br />

<div class="form-group">
    <label asp-for="UserName" class="col-form-label"></label>
    <input asp-for="UserName" class="form-control" readonly />
</div>
<br />

<div class="form-group">
    <label asp-for="DisplayName" class="col-form-label"></label>
    <input asp-for="DisplayName" class="form-control" readonly />
</div>
<br />


<div class="form-group">
    <label asp-for="Email" class="col-form-label"></label>
    <input asp-for="Email" class="form-control" readonly />
</div>
<br />

<div class="form-group">
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input asp-for="PhoneNumber" class="form-control" readonly />
</div>
<br />

<a asp-action="Update" class="btn btn-success" asp-route-id="@Model.Id">Update</a> |
<a asp-action="Index" class="btn btn-light">Back To List</a>