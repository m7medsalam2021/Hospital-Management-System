@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<hr />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.UserName)</th>
                <th>@Html.DisplayNameFor(U => U.DisplayName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(", ", user.Roles)</td>

                    <partial name="_ButtonsPartialView" model="user.Id" />
                </tr>
            }
        </tbody>

    </table>
}