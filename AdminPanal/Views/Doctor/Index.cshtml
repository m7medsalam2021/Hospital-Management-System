@using Hospital.Core.Dtos
@model IReadOnlyList<DoctorsDto>
@{
    ViewData["Title"] = "Index";
}


<h1>All Doctors</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New Doctor</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Specialty</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Id</td>
                    <td>@doctor.Name</td>
                    <td>@doctor.Email</td>
                    <td>@doctor.Phone</td>
                    <td>@doctor.Specialty</td>

                    <partial name="_ButtonsPartialView" model="@doctor.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Doctors'</h2>
    </div>
}