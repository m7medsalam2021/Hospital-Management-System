@using Hospital.Core.Dtos
@model IReadOnlyList<PrescriptionDetailDto>
@{
    ViewData["Title"] = "Index";
}


<h1>All PrescriptionDetails</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New PrescriptionDetail</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Dosage</th>
                <th>Frequency</th>
                <th>Medication</th>
                <th>MedicalRecord</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var prescriptionDetail in Model)
            {
                <tr>
                    <td>@prescriptionDetail.Id</td>
                    <td>@prescriptionDetail.Dosage</td>
                    <td>@prescriptionDetail.Frequency</td>
                    <td>@prescriptionDetail.MedicationId</td>
                    <td>@prescriptionDetail.MedicalRecordId</td>

                    <partial name="_ButtonsPartialView" model="@prescriptionDetail.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Doctors'</h2>
    </div>
}