@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1 class="mt-2">All Roles</h1>
    <hr />
    @* <Partial name="RoleForm" model="new RoleFormViewModel()" /> *@
    <a class="btn btn-secondary btn-lg" asp-action="Create">
        <i class="bi bi-plus-circle-dotted"></i>
        Add New Role
    </a>
    @if (Model.Count() > 0)
    {

        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(r => r.Id)</th>
                    <th>@Html.DisplayNameFor(r => r.Name)</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id"><i class="fas fa-edit"></i> Update</a>
                        </td>

                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="mt-3 p-3 alert-warning">
            <h2>There are no records</h2>
        </div>
    }
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
