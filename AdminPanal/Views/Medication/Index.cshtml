@using Hospital.Core.Entities
@model IReadOnlyList<Medication>
@{
    ViewData["Title"] = "Index";
}

<h1>All Medication</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New Medication</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var medication in Model)
            {
                <tr class="text-center align-middle">
                    <td>@medication.Id</td>
                    <td>@medication.Name</td>
                    <td>@medication.Description</td>
                    <td>@medication.Quantity</td>

                    <partial name="_ButtonsPartialView" model="@medication.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Brands'</h2>
    </div>
}

