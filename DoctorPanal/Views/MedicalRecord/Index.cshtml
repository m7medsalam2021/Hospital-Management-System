@using Hospital.Core.Entities
@model IReadOnlyList<MedicalRecord>
@{
    ViewData["Title"] = "Index";
}

<h1>All MedicalRecords</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New MedicalRecord</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Diagnosis</th>
                <th>Prescription</th>
                <th>Patient</th>
                <th>Doctor</th>
                @* <th>PrescriptionDetails</th> *@
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var medicalRecord in Model)
            {
                <tr class="text-center align-middle">
                    <td>@medicalRecord.Id</td>
                    <td>@medicalRecord.Diagnosis</td>
                    <td>@medicalRecord.Prescription</td>
                    <td>@medicalRecord?.DoctorId</td>
                    <td>@medicalRecord?.PatientId</td>
                    @* <td>@medicalRecord.PrescriptionDetails.</td> *@

                    <partial name="_ButtonsPartialView" model="@medicalRecord.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Medical Record'</h2>
    </div>
}

